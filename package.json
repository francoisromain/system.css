{
  "name": "system.css-boilerplate",
  "version": "0.2.0",
  "style": "styles.css",
  "description": "A minimal CSS boilerplate based on PostCSS, cssnext and system.css",
  "keywords": [
    "postcss",
    "css",
    "cssnext",
    "system.css",
    "normalize.css"
  ],
  "author": "Francois Romain <francoisromain@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/francoisromain/system.css-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/francoisromain/system.css-boilerplate/issues"
  },
  "scripts": {
    "test": "stylelint src/*.css",
    "build": "postcss -u postcss-import -u postcss-custom-properties -u system.css -u postcss-cssnext -i src/styles.css -o dist/styles.css",
    "watch": "onchange 'index.html' 'src/**/*.*' -- npm run build",
    "reload": "livereload",
    "start": "npm-run-all --parallel watch reload"
  },
  "devDependencies": {
    "normalize.css": "^4.2.0",
    "npm-run-all": "^2.3.0",
    "onchange": "^2.5.0",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.7.0",
    "postcss-import": "^8.1.2",
    "stylelint": "^6.8.0",
    "stylelint-config-standard": "^10.0.0",
    "system.css": "^0.2.8"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": null
    }
  }
}
